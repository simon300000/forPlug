<%- include header %>
<body style="background-color: #e8e8e8">
<%- include top %>
<div class="reg_mail" style="height: 280px;">
    <div class="reg_mail_top">邮箱验证</div>
    <div class="article">
        <div class="article_container" style="width: 282px;">
            <% if (success) { %>
            <div class="article_success">
                <div class="article_text"><%= success %></div>
            </div>
            <% } %>
            <% if (error) { %>
            <div class="article_error">
                <div class="article_text"><%= error %> </div>
            </div>
            <% } %>
        </div>
    </div>
    <form class="reg_mail_container" method="post">
        <div class="form-group">
            <input type="name" class="form-control" placeholder="邮箱" name="email">
        </div>
        <div class="form-group">
            <div class="form-inline">
                <div class="form-group">
                    <input type="name" class="form-control" placeholder="验证码" name="yzm" style="width: 121px;">
                </div>
                <div class="form-group">
                    <div style="height: 34px; width: 145px; background:url(/yzm) no-repeat center;background-size: contain;"></div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success  btn-block" value="登录">重新申请</button>
        </div>
    </form>
</div>
<%- include footer %>