<%- include header %>
<body style="background-color: #e8e8e8">
<%- include top %>
<%- include notice %>
<div class="slideshow" id="b1">
    <div class="slideshow-area" id="b2">
        <li style="background: url(images/slide1.jpg) no-repeat center;background-size: cover;width: 100%;" id="b3"></li>
        <li style="background: url(images/slide2.jpg) no-repeat center;background-size: cover;width: 100%;" id="b4"></li>
        <li style="background: url(images/slide3.jpg) no-repeat center;background-size: cover;width: 100%;" id="b5"></li>
        <li style="background: url(images/slide4.jpg) no-repeat center;background-size: cover;width: 100%;" id="b6"></li>
    </div>
    <div class="slideshow-bullets">
        <ul>
        </ul>
    </div>
    <div class="next"></div>
</div>
<script>
    // 获取窗口宽度
    if (window.innerWidth)
        var winWidth = window.innerWidth;
    else if ((document.body) && (document.body.clientWidth))
        var winWidth = document.body.clientWidth;
    // 通过深入 Document 内部对 body 进行检测，获取窗口大小
    if (document.documentElement && document.documentElement.clientHeight && document.documentElement.clientWidth)
    {
        var winWidth = document.documentElement.clientWidth;
    }
    var winHeight = winWidth / 2.7;
    if (winHeight < 496)
        winHeight = 496;

    document.getElementById("b1").style.height = winHeight + "px";
    document.getElementById("b2").style.height = winHeight + "px";
    document.getElementById("b3").style.height = winHeight + "px";
    document.getElementById("b4").style.height = winHeight + "px";
    document.getElementById("b5").style.height = winHeight + "px";
    document.getElementById("b6").style.height = winHeight + "px";
</script>
<div class="mid">
    <div class="mid_left_container">
        <div class="mid_nav_left">
            <% posts.forEach(function (post, index) { %>
            <li>
                <div class="mid_nav_img">
                    <img src="<%= post.target_logo %>" alt="<%= post.name %>" height="130px" width="130px">
                </div>
                <div class="mid_nav_name">
                    <% post.tags.forEach(function (tag, index) { %>
                    <% if (tag) { %>
                    <div class="tag"><div class="btn-success btn-xs"><%= tag %></div></div>
                    <% } %>
                    <% }) %>
                    <a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"class="mid_nav_name_text"><%= post.title %></a>
                </div>
                <div class="mid_nav_content"><p style="padding: 1px;"><%= post.about %></p></div>
                <div class="mid_nav_author_img">
                    <% users.forEach(function (users, index) { %>
                    <% if(post.name == users.name) {%>
                    <img src="<%= users.logoPath%>" alt="<%= users.name%>" class="img-circle" height="35px" width="35px">
                    <% } %>
                    <% }) %>
                </div>
                <div class="mid_nav_author_name"><a href="u/<%= post.name %>"><%= post.name %></a></div>
                <button type="button" class="mid_nav_bth btn btn-info" onclick="window.open('u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>')">查看插件</button>
                <div class="mid_nav_plugin_number_img"></div>
                <div class="mid_nav_plugin_number_text"><%= post.pv %></div>
                <div class="btn-warning mid_nav_plugin_cost btn-xs"><%= post.cost %></div>
            </li>
            <% }) %>
        </div>
    </div>
    <div style="display: table-cell;width: 100px;"></div>
    <div class="mid_right_container">
        <div class="mid_nav_right_search">
            <div class="mid_nav_right_search_bth">
                <button type="button" class="btn btn-primary">搜索</button>
            </div>
            <div class="mid_nav_right_search_input">
                <input type="name" class="form-control" placeholder="搜索...">
            </div>
        </div>
    </div>
</div>




