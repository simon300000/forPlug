<div class="top_color"></div>
<div class="top">
    <div class="top_container">
        <div class="top_logo"><a href="/"></a></div>
        <div class="top_nav">
            <li>
                <a href="/demo">实验室</a>
            </li>
            <li>
                <a href="/demo">创新基地</a>
            </li>
            <li>
                <a href="/demo">闲聊茶庄</a>
            </li>
            <li>
                <a href="/demo">人脉驿站</a>
            </li>
        </div>
        <div class="top_user">
            <% if (user) { %>
            <div>
                <div class="top_user_author_div_mouse" id="yc007" onmouseover="top_yc();"></div>
                <div id="demo2" class="top_user_author_div_color"></div>
                <div class="top_user_author_logo">
                    <img class="img-circle" src="<%= user.logoPath%>" height="48px" width="48px" onmouseover="top_xs();">
                </div>
                <div id="demo1" class="top_user_author_div">
                    <div class="top_user_post">
                        <div><a title="发表" href="/post">发表</a></div>
                    </div>
                    <div class="top_user_logout">
                        <div><a title="登出" href="/logout">登出</a></div>
                    </div>
                    <div class="top_user_upload">
                        <div><a title="头像" href="/upload">头像</a></div>
                    </div>
                </div>
            </div>
            <% } else { %>
            <div class="top_user_login">
                <a title="登录" href="/login">登录</a>
            </div>
            <div class="top_user_reg">
                <a title="注册" href="/reg">注册</a>
            </div>
            <% } %>
        </div>
    </div>
</div>
<script>
    function top_xs(){
        $(document).ready(function(){
            $("#demo1").fadeIn(300);
            $("#demo2").fadeIn(300);
            $("#yc007").fadeIn(300);
        });
    }
    function top_yc(){
        $(document).ready(function(){
            $("#demo1").fadeOut(300);
            $("#demo2").fadeOut(300);
            $("#yc007").fadeOut(300);
        });
    }
</script>